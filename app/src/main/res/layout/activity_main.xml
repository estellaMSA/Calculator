<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtboasvindas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bem-vindo(a)!"
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/txtescolha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Por favor, escolha a operação que deseja realizar:"
            android:fontFamily="sans-serif"
            android:textSize="13dp"
            android:gravity="center_horizontal"
            android:layout_below="@id/txtboasvindas"/>

        <LinearLayout
            android:id="@+id/soma_e_subtrai"
            android:layout_below="@id/txtescolha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnsomar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:height="60dp"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="+"/>

            <Button
                android:id="@+id/btnsubtrai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:height="60dp"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="-"/>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/multip_e_divi"
            android:layout_below="@id/soma_e_subtrai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnmultip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:height="60dp"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="x"/>

            <Button
                android:id="@+id/btndivi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:height="60dp"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="/"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>